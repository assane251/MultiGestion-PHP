<h1>Details Animal {{ animal.id }}</h1>
<ul>
    <li>Type: {{ animal.type }}</li>
    <li>Age: {{ animal.age }}</li>
    <li>Santé: {{ animal.sante }}</li>
    {% for equipement in equipements %}
        {% if  equipement.id == animal.equipement_id %}
            <li>Equipement Id: {{ equipement.nom }}</li>
        {% endif %}
    {% endfor %}
</ul>

<h2>Mise a jour Animal</h2>
<form action="?controller=animal&action=listAnimalParId" method="post">
    <input type="hidden" name="id" value="{{ animal.id }}">
    <label for="type">Type:</label>
    <input type="text" id="type" name="type" value="{{ animal.type }}" required>

    <label for="age">Age:</label>
    <input type="number" id="age" name="age" value="{{ animal.age }}" required>

    <label for="sante">Santé:</label>
    <input type="text" id="sante" name="sante" value="{{ animal.sante }}" required>

    <label for="equipement_id">Equipement ID:</label>
    <select id="equipement_id" name="equipement_id">
        {% for equipement in equipements %}
            <option value="{{ equipement.id }}" {% if equipement.id == animal.equipement_id %}selected{% endif %}>{{ equipement.nom }}</option>
        {% endfor %}
    </select>

    <button type="submit">Mise a jour</button>
</form>
