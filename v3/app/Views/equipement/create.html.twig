{% extends "layout.html.twig" %}

{% block title %}Créer Équipement{% endblock %}

{% block content %}
    <h1 class="text-2xl font-bold mb-4">Nouveau Équipement</h1>
    <form action="?controller=equipement&action=ajouterEquipement" method="POST" class="space-y-4 bg-gray-100 p-6 rounded-lg shadow-md">
        <div class="flex flex-col">
            <label for="nom" class="text-sm font-medium">Nom:</label>
            <input type="text" id="nom" name="nom" required class="border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>

        <div class="flex flex-col">
            <label for="etat" class="text-sm font-medium">État:</label>
            <input type="text" id="etat" name="etat" required class="border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>

        <div class="flex flex-col">
            <label for="disponible" class="text-sm font-medium">Disponibilité:</label>
            <select id="disponible" name="disponible" class="border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                <option value="1">Oui</option>
                <option value="0">Non</option>
            </select>
        </div>

        <div class="flex items-center space-x-4">
            <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded-md hover:bg-green-600">Créer un équipement</button>
        </div>
    </form>
{% endblock %}
